<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="NumListView" Margin="250,120,250,120">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Number" DisplayMemberBinding="{Binding}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="Add" Content="Add" Width="75" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,288,30" Click="AddButton_click"/>
        <Button Name="Del" Content="Del" Width="75" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="282,0,0,30" Click="DelButton_click"/>
    </Grid>
</Window>
